#!/usr/bin/env bash

DIR=$HOME
if [ "$DIR" = "/" ]; then 
    echo "Switching to tmp" 
    DIR="/tmp"
else
    DIR="$DIR/.cache"
fi;

mkdir -p $DIR
cd $DIR
if [ -e newm_log_bu1 ]
    then cp newm_log_bu1 newm_log_bu2
fi
if [ -e newm_log ]
    then cp newm_log newm_log_bu1
fi
cd $HOME

SCRIPTDIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd)
exec $SCRIPTDIR/.start-newm "$1" > $DIR/newm_log 2>&1
