#!/usr/bin/env bash

DIR=$HOME
if [ "$DIR" = "/" ]; then 
    echo "Switching to tmp" 
    DIR="/tmp"
else
    DIR="$DIR/.cache"
fi;

mkdir -p $DIR
cd $DIR
if [ -e newm_log_bu1 ]
    then cp newm_log_bu1 newm_log_bu2
fi
if [ -e newm_log ]
    then cp newm_log newm_log_bu1
fi
cd $HOME

SOURCE=${BASH_SOURCE[0]}
while [ -h "$SOURCE" ]; do
  CDIR=$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )
  SOURCE=$(readlink "$SOURCE")
  [[ $SOURCE != /* ]] && SOURCE=$CDIR/$SOURCE
done
SCRIPTDIR=$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )

echo "newm - script dir is $SCRIPTDIR, log dir is $DIR, arguments are $@"
exec $SCRIPTDIR/.start-newm "$@" > $DIR/newm_log 2>&1
